<% layout("./Layouts/boilerplate.ejs") %>

    <div class="form-container">
        <h2>Create New Blog</h2>
        <form action="/allBlogs" method="POST" enctype="multipart/form-data">
            <label for="title">Blog Title</label>
            <input type="text" id="title" name="title" placeholder="Enter blog title" required>

            <label for="image">Image</label>
            <input type="file" id="image" name="coverImage">

            <label for="category">Category</label>
            <select id="category" name="category">
                <option value="web-development" name="category">Web Development</option>
                <option value="mental-health" name="category">Mental Health</option>
                <option value="gaming" name="category">Gaming</option>
                <option value="fashion-beauty" name="category">Fashion & Beauty</option>
                <option value="parenting" name="category">Parenting</option>
                <option value="technology" name="category">Technology</option>
                <option value="technology" name="category">Technology</option>
                <option value="lifestyle" name="category">Lifestyle</option>
                <option value="personal-development" name="category">Personal Development</option>
                <option value="finance" name="category">Finance</option>
                <option value="career-education" name="category">Career & Education</option>
                <option value="business-startups" name="category">Business & Startups</option>
                <option value="creative-arts" name="category">Creative Arts</option>
            </select>

            <label for="content">Blog Content</label>
            <textarea id="content" name="content" placeholder="Write your blog here..." required></textarea>

            <button class="submit-btn" type="submit">Publish Blog</button>
        </form>
    </div>